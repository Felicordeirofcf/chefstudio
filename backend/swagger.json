    "/ads/campaigns/{campaignId}/insights": {
      "get": {
        "summary": "Obter métricas de uma campanha",
        "tags": ["Anúncios"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "campaignId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID da campanha"
          },
          {
            "name": "timeRange",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["last_7d", "last_30d", "last_90d", "this_month", "last_month", "this_year"]
            },
            "description": "Intervalo de tempo para as métricas"
          }
        ],
        "responses": {
          "200": {
            "description": "Métricas da campanha",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "date_start": {
                            "type": "string",
                            "example": "2023-05-01"
                          },
                          "date_stop": {
                            "type": "string",
                            "example": "2023-05-31"
                          },
                          "impressions": {
                            "type": "string",
                            "example": "12345"
                          },
                          "clicks": {
                            "type": "string",
                            "example": "234"
                          },
                          "spend": {
                            "type": "string",
                            "example": "45.67"
                          },
                          "cpc": {
                            "type": "string",
                            "example": "0.19"
                          },
                          "ctr": {
                            "type": "string",
                            "example": "1.89"
                          },
                          "conversions": {
                            "type": "string",
                            "example": "12"
                          },
                          "cost_per_conversion": {
                            "type": "string",
                            "example": "3.81"
                          }
                        }
                      }
                    },
                    "summary": {
                      "type": "object",
                      "properties": {
                        "impressions": {
                          "type": "string",
                          "example": "12345"
                        },
                        "clicks": {
                          "type": "string",
                          "example": "234"
                        },
                        "spend": {
                          "type": "string",
                          "example": "45.67"
                        },
                        "cpc": {
                          "type": "string",
                          "example": "0.19"
                        },
